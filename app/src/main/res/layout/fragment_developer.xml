<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/developers"
        android:background="@color/primary_light"
        tools:context="com.example.abhiu.myapplication.Fragments.Developer">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developers behind "
            android:textSize="22dp"
            android:id="@+id/textView3"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_marginTop="67dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fixthis "
            android:textSize="22dp"
            android:id="@+id/textView4"
            android:textStyle="bold"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView_abhi"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/photo"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/imageView_chiranth" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abhilash Udayashankar"
            android:id="@+id/abhitext"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_below="@+id/imageView_abhi"
            android:layout_centerHorizontal="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView_chiranth"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/chiranth"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_below="@+id/abhitext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chirtxt"
            android:text="Chiranth Bangalore SathyaPrakash"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_below="@+id/imageView_chiranth"
            android:layout_alignEnd="@+id/textView3" />

    </RelativeLayout>
</ScrollView>