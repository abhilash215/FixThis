<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/leakage"
    tools:context="com.example.abhiu.myapplication.Fragments.Leak_frag">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/camera"
        android:id="@+id/camera_leak"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/location_leak"
        android:layout_below="@+id/camera_leak"
        android:textSize="20sp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edit_loc_light"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/camera_leak"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Street or Intersection"
        android:layout_marginTop="50dp"
        android:id="@+id/street"
        android:textSize="20sp"
        android:layout_below="@+id/edit_loc_light"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="195dp"
        android:textSize="20sp"
        android:id="@+id/editText5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/user_road"
        android:textSize="20dp"
        android:layout_below="@+id/street"
        android:text="Reporter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonleakage" />

</RelativeLayout>
