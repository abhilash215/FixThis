<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.abhiu.myapplication.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_request_icon"
        android:src="@drawable/new_request_icon"
        android:paddingLeft="25dp"
        android:paddingTop="33dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" New Request"
        android:id="@+id/new_req"
        android:layout_alignTop="@+id/recent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/recent_icon"
        android:layout_alignParentRight="true"
        android:id="@+id/recent_icon_id"
        android:paddingRight="40dp"
        android:paddingTop="33dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent"
        android:id="@+id/recent"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="17sp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" My Requets"
        android:id="@+id/my_req"
        android:layout_alignTop="@+id/fav"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Favorites"
        android:id="@+id/fav"
        android:layout_marginTop="118dp"
        android:layout_below="@+id/recent"
        android:layout_alignRight="@+id/recent"
        android:layout_alignEnd="@+id/recent"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favourites_id"
        android:src="@drawable/favourites_icon"
        android:layout_below="@+id/recent"
        android:layout_alignParentRight="true"
        android:paddingRight="45dp"
        android:paddingTop="33dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/fav"
        android:layout_alignEnd="@+id/fav"
        android:layout_marginBottom="150dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_id"
        android:src="@drawable/user_icon"
        android:layout_below="@+id/fav"
        android:layout_alignParentRight="true"
        android:paddingRight="40dp"
        android:paddingTop="33dp"/>

</RelativeLayout>
