<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_content_activity"
    android:background="@color/primary_light"
    android:theme="@style/AppTheme.NoActionBar">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbaremer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags="scroll|enterAlways|snap"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_emer"
        android:layout_below="@+id/toolbaremer"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed Dial by clicking on the title"
            android:id="@+id/dial"
            android:layout_alignBottom="@+id/layoutpolice"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="60dp"
            android:textSize="20sp"
            android:transitionName="emergency"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:id="@+id/linearLayoutmain">

                </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="130dp"
            android:id="@+id/layoutpolice"
            android:background="@drawable/ripple_effect"
            android:layout_below="@+id/linearLayoutmain">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_call_black_24dp"
                android:id="@+id/settings_send"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sendtext"
                android:layout_margin="5dp"
                android:textSize="22sp"
                android:text="Police"  />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/sudps"
            android:background="@drawable/ripple_effect"
            android:layout_below="@+id/layoutpolice">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_call_black_24dp"
                android:id="@+id/ackimg"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ack"
                android:layout_margin="5dp"
                android:textSize="22sp"
                android:text="SU DPS"  />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/layout2"
            android:background="@drawable/ripple_effect"
            android:layout_below="@+id/sudps">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_call_black_24dp"
                android:id="@+id/aboutus"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abouttext"
                android:layout_margin="5dp"
                android:textSize="22sp"
                android:text="Fire"  />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/itsdialer"
            android:background="@drawable/ripple_effect"
            android:layout_below="@+id/layout2"
            android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_call_black_24dp"
            android:id="@+id/itsdialemer"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itsopendialer"
            android:layout_margin="5dp"
            android:textSize="22sp"
            android:text="ITS Support"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/dialer"
            android:background="@drawable/ripple_effect"
            android:layout_below="@+id/itsdialer"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_call_black_24dp"
                android:id="@+id/dialemer"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/opendialer"
                android:layout_margin="5dp"
                android:textSize="22sp"
                android:text="Open Dialer"  />

        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>